{
  "name": "xco-api",
  "version": "0.1.0",
  "description": "Backend of the XCO Search project",
  "author": "Felipe Hlibco <hlibco@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "lint": "tslint --project . -s node_modules/custom-tslint-formatters/formatters 'src/**/*.+(ts|js)'",
    "build": "rm -rf dist && tsc",
    "start": "nodemon",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./e2e/jest-e2e.json --detectOpenHandles"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn build && yarn lint && git add ."
    }
  },
  "dependencies": {
    "@nestjs/common": "5.1.0",
    "@nestjs/core": "5.1.0",
    "@nestjs/typeorm": "5.1.0",
    "class-transformer": "0.1.9",
    "class-validator": "^0.8.5",
    "cors": "2.8.4",
    "dotenv": "^6.0.0",
    "envstore": "0.1.1",
    "joi": "13.6.0",
    "jsonwebtoken": "^8.2.0",
    "mysql": "2.16.0",
    "nestjs-extensions": "0.29.0",
    "pino": "5.0.1",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.2.2",
    "typeorm": "0.2.7",
    "typescript": "3.0.1"
  },
  "devDependencies": {
    "@nestjs/swagger": "^1.1.4",
    "@nestjs/testing": "5.1.0",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.1",
    "@types/node": "10.5.7",
    "@types/supertest": "2.0.5",
    "custom-tslint-formatters": "^2.4.0",
    "husky": "1.0.0-rc.13",
    "jest": "23.5.0",
    "nodemon": "1.18.3",
    "prettier": "1.14.0",
    "supertest": "3.1.0",
    "ts-jest": "23.1.3",
    "ts-loader": "4.4.2",
    "ts-node": "7.0.0",
    "tsconfig-paths": "3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "testURL": "http://localhost",
    "testEnvironment": "node",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 25,
        "functions": 25,
        "lines": 25,
        "statements": 25
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "notify": true,
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
